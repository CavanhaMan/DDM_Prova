<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/grid"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- *************** LINHA ZERO *************** -->
    <TextView
        android:id="@+id/display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="4"
        android:background="@android:color/black"
        android:textColor="@android:color/white"
        android:layout_gravity="fill_horizontal"
        android:layout_margin="8dp"
        android:textAlignment="textEnd"
        android:text="1234567890.0"
        android:textSize="36sp" />

    <!-- *************** LINHA UM *************** -->
    <Button
        android:id="@+id/btdiv"
        style="@style/botao"
        android:layout_row="1"
        android:layout_column="3"
        android:layout_rowWeight="1"
        android:text="/" />

    <!-- *************** LINHA DOIS *************** -->
    <Button
        android:id="@+id/bt1"
        style="@style/botao"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_rowWeight="1"
        android:text="1" />

    <Button
        android:id="@+id/bt2"
        style="@style/botao"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_rowWeight="1"
        android:text="2" />

    <Button
        android:id="@+id/bt3"
        style="@style/botao"
        android:layout_row="2"
        android:layout_column="2"
        android:layout_rowWeight="1"
        android:text="3" />

    <Button
        android:id="@+id/btvezes"
        style="@style/botao"
        android:layout_row="2"
        android:layout_column="3"
        android:layout_rowWeight="1"
        android:text="*" />

    <!-- *************** LINHA TRES *************** -->
    <Button
        android:id="@+id/bt4"
        style="@style/botao"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_rowWeight="1"
        android:text="4" />

    <Button
        android:id="@+id/bt5"
        style="@style/botao"
        android:layout_row="3"
        android:layout_column="1"
        android:layout_rowWeight="1"
        android:text="5" />

    <Button
        android:id="@+id/bt6"
        style="@style/botao"
        android:layout_row="3"
        android:layout_column="2"
        android:layout_margin="4dp"
        android:layout_rowWeight="1"
        android:text="6" />

    <Button
        android:id="@+id/btmenos"
        style="@style/botao"
        android:layout_row="3"
        android:layout_column="3"
        android:layout_rowWeight="1"
        android:text="-" />

    <!-- *************** LINHA QUATRO *************** -->
    <Button
        android:id="@+id/bt7"
        style="@style/botao"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_rowWeight="1"
        android:text="7" />

    <Button
        android:id="@+id/bt8"
        style="@style/botao"
        android:layout_row="4"
        android:layout_column="1"
        android:layout_margin="4dp"
        android:layout_rowWeight="1"
        android:text="8" />

    <Button
        android:id="@+id/bt9"
        style="@style/botao"
        android:layout_row="4"
        android:layout_column="2"
        android:layout_rowWeight="1"
        android:text="9" />

    <Button
        android:id="@+id/btmais"
        style="@style/botao"
        android:layout_row="4"
        android:layout_column="3"
        android:layout_rowSpan="3"
        android:layout_rowWeight="1"
        android:gravity="fill"
        android:text="+" />

    <!-- *************** LINHA CINCO *************** -->
    <Button
        android:id="@+id/btc"
        style="@style/botao"
        android:layout_row="5"
        android:layout_column="0"
        android:layout_rowWeight="1"
        android:text="C" />

    <Button
        android:id="@+id/bt0"
        style="@style/botao"
        android:layout_row="5"
        android:layout_column="1"
        android:layout_rowWeight="1"
        android:text="0" />

    <Button
        android:id="@+id/btm"
        style="@style/botao"
        android:layout_column="2"
        android:layout_row="5"
        android:layout_rowWeight="1"
        android:text="M" />

    <!-- *************** LINHA SEIS *************** -->
    <Button
        android:id="@+id/btigual"
        style="@style/botao"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:layout_gravity="fill_horizontal"
        android:layout_row="6"
        android:layout_rowWeight="1"
        android:text="=" />

</GridLayout>